{
  "compilerOptions": {
    "outDir": "./out",
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "out", "**/*.tago-io.js"]
}
